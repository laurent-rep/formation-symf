{% extends '/admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Administration des réservations</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Montant</th>
            </tr>

            <tbody>
            {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.createAt|date('d/m/Y') }}</td>
                <td><img src="{{ booking.booker.avatar }}" alt="" class="avatar avatar-micro"> {{ booking.booker.fullName }}</td>
                <td>{{ booking.annonce.title }}</td>
                <td>{{ booking.amount }}</td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                    <a href="" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>

            </thead>
        </table>
    </div>

{% endblock %}
